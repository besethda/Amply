{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Amply Artist Environment on Azure — Blob Storage, CDN, Managed Identity, and Azure Function for automatic callback to Amply"
  },
  "parameters": {
    "artistName": {
      "type": "string",
      "metadata": {
        "description": "Artist name (lowercase, no spaces — e.g. skywave)"
      }
    },
    "amplyCallbackUrl": {
      "type": "string",
      "defaultValue": "https://amply.app/api/complete-artist-setup",
      "metadata": {
        "description": "Amply API endpoint for deployment completion"
      }
    },
    "amplyApiKey": {
      "type": "secureString",
      "metadata": {
        "description": "API key for authenticating callback to Amply"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "returnUrl": {
      "type": "string",
      "defaultValue": "https://amply.app/artist/setup-complete.html",
      "metadata": {
        "description": "Return link to Amply setup completion page"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat('amply', uniqueString(resourceGroup().id), toLower(parameters('artistName')))]",
    "containerName": "artist-content",
    "functionAppName": "[concat('amply-callback-', parameters('artistName'))]",
    "appServicePlanName": "[concat('amply-plan-', parameters('artistName'))]",
    "functionStorageAccountName": "[concat('amplyfunc', uniqueString(resourceGroup().id))]",
    "managedIdentityName": "[concat('amply-access-', parameters('artistName'))]",
    "cdnProfileName": "[concat('amply-cdn-', parameters('artistName'))]",
    "cdnEndpointName": "[concat('amply-', parameters('artistName'), '-cdn')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-04-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "allowBlobPublicAccess": false,
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2021-04-01",
      "name": "[concat(variables('storageAccountName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2021-04-01",
      "name": "[concat(variables('storageAccountName'), '/default/', variables('containerName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccountName'), 'default')]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('managedIdentityName')]",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2020-08-01-preview",
      "name": "[guid(resourceGroup().id, variables('managedIdentityName'), 'StorageContributor')]",
      "scope": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/17d1049b-9a84-46fb-a7db-e8498e7169ee')]",
        "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2018-11-30').principalId]",
        "principalType": "ServicePrincipal"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-04-01",
      "name": "[variables('functionStorageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "kind": "functionapp"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('functionAppName')]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]": {}
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('functionStorageAccountName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('functionStorageAccountName'), ';EndpointSuffix=core.windows.net;AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionStorageAccountName')), '2021-04-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('functionStorageAccountName'), ';EndpointSuffix=core.windows.net;AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionStorageAccountName')), '2021-04-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(variables('functionAppName'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "python"
            },
            {
              "name": "ARTIST_ID",
              "value": "[parameters('artistName')]"
            },
            {
              "name": "CALLBACK_URL",
              "value": "[parameters('amplyCallbackUrl')]"
            },
            {
              "name": "API_KEY",
              "value": "[parameters('amplyApiKey')]"
            },
            {
              "name": "STORAGE_ACCOUNT_NAME",
              "value": "[variables('storageAccountName')]"
            },
            {
              "name": "CONTAINER_NAME",
              "value": "[variables('containerName')]"
            },
            {
              "name": "RESOURCE_GROUP",
              "value": "[resourceGroup().name]"
            }
          ],
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Cdn/profiles",
      "apiVersion": "2020-09-01",
      "name": "[variables('cdnProfileName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_Microsoft"
      }
    },
    {
      "type": "Microsoft.Cdn/profiles/endpoints",
      "apiVersion": "2020-09-01",
      "name": "[concat(variables('cdnProfileName'), '/', variables('cdnEndpointName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles', variables('cdnProfileName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "originHostHeader": "[concat(variables('storageAccountName'), '.blob.core.windows.net')]",
        "origins": [
          {
            "name": "blob-origin",
            "properties": {
              "hostName": "[concat(variables('storageAccountName'), '.blob.core.windows.net')]",
              "httpPort": 80,
              "httpsPort": 443,
              "originHostHeader": "[concat(variables('storageAccountName'), '.blob.core.windows.net')]"
            }
          }
        ],
        "isHttpAllowed": true,
        "isHttpsAllowed": true,
        "queryStringCachingBehavior": "IgnoreQueryString",
        "contentTypesToCompress": [
          "application/x-javascript",
          "application/javascript",
          "text/css",
          "text/plain",
          "application/json"
        ],
        "isCompressionEnabled": true,
        "optimizationType": "GeneralMediaStreaming"
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]",
      "metadata": {
        "description": "Storage account name for artist content"
      }
    },
    "storageAccountKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value]",
      "metadata": {
        "description": "Storage account access key"
      }
    },
    "containerName": {
      "type": "string",
      "value": "[variables('containerName')]",
      "metadata": {
        "description": "Blob container name"
      }
    },
    "managedIdentityId": {
      "type": "string",
      "value": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName'))]",
      "metadata": {
        "description": "Managed identity for Amply access"
      }
    },
    "managedIdentityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityName')), '2018-11-30').principalId]",
      "metadata": {
        "description": "Principal ID of managed identity"
      }
    },
    "cdnEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Cdn/profiles/endpoints', variables('cdnProfileName'), variables('cdnEndpointName'))).hostName]",
      "metadata": {
        "description": "CDN endpoint for content delivery"
      }
    },
    "functionAppUrl": {
      "type": "string",
      "value": "[concat('https://', variables('functionAppName'), '.azurewebsites.net')]",
      "metadata": {
        "description": "Function app URL for callback endpoint"
      }
    },
    "returnToAmply": {
      "type": "string",
      "value": "[parameters('returnUrl')]",
      "metadata": {
        "description": "Return to Amply setup page"
      }
    }
  }
}
